<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/scoala</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">password12345678</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="sql.entity.Clasa"/>
        <mapping class="sql.entity.Elevi"/>
        <mapping class="sql.entity.Materie"/>
        <mapping class="sql.entity.Profesor"/>
        <mapping class="sql.entity.Note"/>
        <mapping class="sql.entity.Medii"/>
    </session-factory>
</hibernate-configuration>